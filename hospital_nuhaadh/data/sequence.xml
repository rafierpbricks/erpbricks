<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="seq_hospital_patients" model="ir.sequence">
            <field name="name">Patients Sequence</field>                 <!-- Name of the sequence -->
            <field name="code">hospital.patients.sequence</field>          <!-- sequence record ID -->
            <field name="prefix">Hp</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>  <!--company_id="False"
                                 This will evaluate to the string 'False' and not the boolean False-->
        </record>
        <record id="seq_hospital_appointments" model="ir.sequence">
            <field name="name">Appointment Sequence</field>                 <!-- Name of the sequence -->
            <field name="code">hospital.appointments.sequence</field>          <!-- sequence record ID -->
            <field name="prefix">Ap</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>  <!--company_id="False"
                                 This will evaluate to the string 'False' and not the boolean False-->
        </record>
        <record id="seq_hospital_doctors" model="ir.sequence">
            <field name="name">Doctors Sequence</field>                 <!-- Name of the sequence -->
            <field name="code">hospital.doctors.sequence</field>          <!-- sequence record ID -->
            <field name="prefix">Dr</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>  <!--company_id="False"
                                 This will evaluate to the string 'False' and not the boolean False-->
        </record>
    </data>
</odoo>