    <template id="report_patients">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-2" style="margin:auto;">    <!-- table with 2 columns -->
                            </div>
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <table class="table table-condensed" style="border: 3px solid black !important;">
                                        <tr>
                                            <td width="40%">
                                                <p style="text-align:center;padding-top:10px;">
                                                    <!-- if image is not existing, Then image in the given location -->
                                                    <img t-if="not o.image"
                                                         t-att-src="'/web/static/src/img/placeholder.png'" height="120"
                                                         border="1" width="120"/>

                                                    <!-- image of the patient -->
                                                    <img t-if="o.image"
                                                         t-att-src="'data:image/png;base64,%s' % to_text(o.image)"
                                                         height="210" border="1" width="170"/>
                                                </p>
                                                <p style="text-align:center;">
                                                    <h2>
                                                        <strong>
                                                            <span t-field="o.patients_name"/>
                                                        </strong>
                                                    </h2>
                                                </p>
                                            </td>
                                            <td width="60%">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p style="text-align:right;">
                                                                <strong>Ph No:</strong>
                                                            </p>
                                                            <p style="text-align:right;">
                                                                <strong>Ph Name:</strong>
                                                            </p>
                                                            <p style="text-align:right;">
                                                                <strong>Contact Number:</strong>
                                                            </p>
                                                            <p style="text-align:right;">
                                                                <strong>Age:</strong>
                                                            </p>
                                                            <p style="text-align:right;">
                                                                <strong>Group:</strong>
                                                            </p>
                                                        </td>
                                                        <td>
                                                            <p style="text-align:left;padding-left:10px;"
                                                               t-field="o.name_seq"/>
                                                            <p style="text-align:left;padding-left:10px;"
                                                               t-field="o.patients_name"/>
                                                            <p style="text-align:left;padding-left:10px;"
                                                               t-field="o.name"/>
                                                            <p style="text-align:left;padding-left:10px;"
                                                               t-field="o.patients_age"/>
                                                            <p style="text-align:left;padding-left:10px;"
                                                               t-field="o.age_group"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                    <table class="table table-condensed" style="border: 3px solid black !important;">
                                        <t t-foreach="appointments_list" t-as="app">
                                            <tr>
                                                <td>
                                                    <t t-esc="app['name_seq']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="app['notes']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="app['appointments_date']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                            </center>
                        </div>
                        <br/>
                        <!--                        adding the barcode to the report-->
                        <!--                          https://www.youtube.com/watch?v=bwT_ZtKWn9E&list=PLqRRLx0cl0hoJhjFWkFYowveq2Zn55dhM&index=51  -->
                        <table class="table table-bordered mb-0" style="border: 2px solid black !important;width: 3in;">
                            <tr>
                                <td class="text-center align-middle" style="height: 6rem">
                                    <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.name_seq, 600, 150)" style="width:100%;height::4rem;"/>
                                    <span t-field="o.name_seq"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>