<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="connect_tree" model="ir.ui.view">
        <field name="name">connect.test.tree</field>
        <field name="model">connect.test</field>
        <field name="arch" type="xml">
            <tree string="Connection Oracle">
                <button name="insert_button" string="Test" type="object"/>
                <field name="usersname"/>
                <field name="usersid"/>
            </tree>
        </field>
    </record>

    <record id="connect_form" model="ir.ui.view">
        <field name="name">connect.test.form</field>
        <field name="model">connect.test</field>
        <field name="arch" type="xml">
            <form string="Connection Oracle">
                <header>
                    <button name="insert_button" string="Test" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="usersname"/>
                            <field name="usersid"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action of the patients menu-->
    <record id="action_connect" model="ir.actions.act_window">
        <field name="name">Connect</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">connect.test</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"active_test":False}</field>
        <!--    <field name="context">{"search_default_female":1}</field>--> <!-- if you want to enable default search
 filter change female to  whatever filter type you need -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                import your First Data!
            </p>
        </field>
    </record>

    <menuitem id="connect_test" name="Oracle" sequence="15" parent="hospital_root"
              action="action_connect"></menuitem>


</odoo>